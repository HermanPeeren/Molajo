<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="1.6.0"
        application="site"
        method="upgrade">
    <name>syndicate</name>
    <author>Molajo Project</author>
    <creationDate>May 2006</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>molajo.org</authorUrl>
    <version>1.0</version>
    <description>SYNDICATE_DESCRIPTION</description>
    <files>
        <filename module="syndicate">syndicate.php</filename>
        <folder>layouts</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>syndicate.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.syndicate.ini</language>
        <language tag="en-GB">en-GB.syndicate.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_SYNDICATION_FEEDS"/>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="text"
                        type="text"
                        default="Feed Entries"
                        label="SYNDICATE_FIELD_TEXT_LABEL"
                        description="SYNDICATE_FIELD_TEXT_DESC"/>
                <field
                        name="format"
                        type="list"
                        default="rss"
                        label="SYNDICATE_FIELD_FORMAT_LABEL"
                        description="SYNDICATE_FIELD_FORMAT_DESC">
                    <option
                            value="rss">SYNDICATE_FIELD_VALUE_RSS
                    </option>
                    <option
                            value="atom">SYNDICATE_FIELD_VALUE_ATOM
                    </option>
                </field>
            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="layout_class_suffix"
                        type="text"
                        label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="MODULES_FIELD_CACHING_LABEL"
                        description="MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
