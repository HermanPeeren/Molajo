<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	application="site"
	method="upgrade">
	<name>menu</name>
	<author>Molajo Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>collaborate@molajo.org</authorEmail>
	<authorUrl>molajo.org</authorUrl>
	<version>1.0</version>
	<description>MENU_DESCRIPTION</description>
	<files>
		<filename module="menu">menu.php</filename>
		<folder>layouts</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		<filename>menu.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.menu.ini</language>
		<language tag="en-GB">en-GB.menu.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	<config>
		<fields name="parameters">
			<fieldset name="basic">
				<field
					name="menu_id"
					type="menu"
					label="MENU_FIELD_MENUTYPE_LABEL"
					description="MENU_FIELD_MENUTYPE_DESC" />
				<field
					name="start_level"
					type="list"
					default="1"
					label="MENU_FIELD_STARTLEVEL_LABEL"
					description="MENU_FIELD_STARTLEVEL_DESC"
				>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="end_level"
					type="list"
					default="0"
					label="MENU_FIELD_ENDLEVEL_LABEL"
					description="MENU_FIELD_ENDLEVEL_DESC"
					>
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="show_all_children"
					type="radio"
					default="0"
					label="MENU_FIELD_ALLCHILDREN_LABEL"
					description="MENU_FIELD_ALLCHILDREN_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="tag_id"
					type="text"
					label="MENU_FIELD_TAG_ID_LABEL"
					description="MENU_FIELD_TAG_ID_DESC" />

				<field
					name="class_suffix"
					type="text"
					label="MENU_FIELD_CLASS_LABEL"
					description="MENU_FIELD_CLASS_DESC" />

				<field
					name="window_open"
					type="text"
					label="MENU_FIELD_TARGET_LABEL"
					description="MENU_FIELD_TARGET_DESC" />

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="layout_class_suffix"
					type="text"
					label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="MODULES_FIELD_CACHING_LABEL"
					description="MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="MODULES_FIELD_CACHE_TIME_LABEL"
					description="MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
