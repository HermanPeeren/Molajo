<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.0.0" method="upgrade">
	<name>COM_INSTALLER</name>
	<author>Amy Stephen</author>
	<creationDate>September 2011</creationDate>
	<copyright>Copyright (C) 2011 Amy Stephen. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>collaborate@molajo.org</authorEmail>
	<authorUrl>http://molajo.org</authorUrl>
	<version>1.0</version>
	<description>COM_INSTALLER_DESCRIPTION</description>

	<!-- Site -->
	<files folder="site">
		<filename>installer.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>includes</folder>        
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<media destination="com_installer" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<administration>
        
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>installer.php</filename>
            <filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>readme</filename>
			<folder>controllers</folder>
			<folder>fields</folder>
			<folder>helpers</folder>
            <folder>includes</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">com_installer/language/en-GB/en-GB.com_installer.ini</language>
			<language tag="en-GB">com_installer/language/en-GB/en-GB.com_installer.sys.ini</language>
		</languages>

	</administration>

	<!-- Table -->
	<tables>
		<table>#__installer</table>
	</tables>

</extension>