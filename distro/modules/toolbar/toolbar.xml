<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="1.0"
        application="administrator">
    <name>toolbar</name>
    <author>Molajo Project</author>
    <creationDate>Nov 2005</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>molajo.org</authorUrl>
    <version>1.0</version>
    <description>TOOLBAR_DESCRIPTION</description>
    <files>
        <filename module="toolbar">toolbar.php</filename>
        <filename>index.html</filename>
        <folder>layouts</folder>
    </files>
    <languages>
        <language tag="en-GB">en-GB.toolbar.ini</language>
        <language tag="en-GB">en-GB.tollbar.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMINISTER_TOOLBAR"/>
    <config>
        <fields name="parameters">
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="layout_class_suffix"
                        type="text"
                        label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="MODULES_FIELD_CACHING_LABEL"
                        description="MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">MOLAJO_FIELD_VALUE_NOCACHING
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
