<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" application="administrator" method="upgrade">
    <name>FOOTER_NAME</name>
    <author>Molajo Contributors</author>
    <creationDate>January 2012</creationDate>
    <copyright>Copyright 2011 Amy Stephen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>http://molajo.org</authorUrl>
    <version>1.0</version>
    <description>FOOTER_DESCRIPTION</description>
    <files>
        <filename module="footer">footer.php</filename>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.footer.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.footer.sys.ini</language>
    </languages>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="link"
                        type="url"
                        class="inputbox"
                        label="MOLAJO_FIELD_LINK_LABEL"
                        description="MOLAJO_FIELD_LINK_DESC"
                        filter="MolajoFilterHelper::filterURL"
                        size="60"
                        />
                <field
                        name="linked_text"
                        type="text"
                        label="MOLAJO_FIELD_LINKED_TEXT_LABEL"
                        description="MOLAJO_FIELD_LINKED_TEXT_DESC"
                        class="inputbox"
                        size="45"
                        />
                <field
                        name="remaining_text"
                        type="textarea"
                        label="MOLAJO_FIELD_REMAINING_TEXT_LABEL"
                        description="MOLAJO_FIELD_REMAINING_TEXT_DESC"
                        class="inputbox"
                        rows="3"
                        cols="30"
                        />
                <field
                        name="version"
                        type="textarea"
                        label="MOLAJO_FIELD_VERSION_TEXT_LABEL"
                        description="MOLAJO_FIELD_VERSION_TEXT_DESC"
                        class="inputbox"
                        rows="3"
                        cols="30"
                        />
            </fieldset>
            <fieldset include="advanced"/>
        </fields>
    </config>
</extension>