<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Molajo 1.0//DTD template 1.0//EN" "http://molajo.org/xml/dtd/1.0/template-install.dtd">
<extension
	type="template"
	version="1.0"
	application="administrator"
    method="upgrade">

    <name>Molajo</name>
	<creationDate>08/01/2011</creationDate>
	<author>Molajo Contributors</author>
	<creationDate>September 2011</creationDate>
	<copyright>Copyright (C) 2011 Individual Molajo Contributors. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>collaborate@molajo.org</authorEmail>
	<authorUrl>http://molajo.org</authorUrl>
	<version>1.0</version>
	<description>TPL_MOLAJO_DESCRIPTION</description>

	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
    	<filename>params.ini</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>images</folder>
        <folder>include</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>cp_shell</position>
		<position>control-panel</position>
		<position>footer</position>
		<position>login</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="useRoundedCorners"
					type="list"
					default="1"
					label="TPL_MOLAJO_FIELD_ROUNDED_LABEL"
					description="TPL_MOLAJO_FIELD_ROUNDED_DESC">
					<option
						value="0">JDISABLED</option>
					<option
						value="1">JENABLED</option>
				</field>
				<field
					name="showSiteName"
					type="list"
					default="0"
					label="TPL_MOLAJO_FIELD_SITENAME_LABEL"
					description="TPL_MOLAJO_FIELD_SITENAME_DESC">
					<option
						value="0">JDISABLED</option>
					<option
						value="1">JENABLED</option>
				</field>

				<field
					name="textBig"
					type="list"
					default="0"
					label="TPL_MOLAJO_FIELD_TEXTBIG_LABEL"
					description="TPL_MOLAJO_FIELD_TEXTBIG_DESC">
					<option
						value="0">JDISABLED</option>
					<option
						value="1">JENABLED</option>
				</field>

				<field
					name="highContrast"
					type="list"
					default="0"
					label="TPL_MOLAJO_FIELD_CONTRAST_LABEL"
					description="TPL_MOLAJO_FIELD_CONTRAST_DESC">
					<option
						value="0">JDISABLED</option>
					<option
						value="1">JENABLED</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
