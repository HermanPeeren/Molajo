<?xml version="1.0" encoding="utf-8" ?>
<table name="content">
    <fields>
        <fieldset name="primary">
            <field name="id" />
            <field name="extension_instance_id" />
                <foreign_key>extension_instances</foreign_key>
                <filter>integer</filter>
                <formfield>select</formfield>
            </field>
            <field name="asset_type_id">
                <foreign_key>asset_types</foreign_key>
                <hidden>true</hidden>
            </field>
            <field name="title">
                <filter>text-function</filter>
                <formfield>
                    <type>text</type>
                    <name>title</name>
                    <id>title</id>
                    <length>30</length>
                </formfield>
            </field>
            <field name="subtitle">
                <filter>function-name</filter>
                <formfield>
                    <type>text</type>
                    <name>subtitle</name>
                    <id>subtitle</id>
                    <label>Subtitle</label>
                    <length>30</length>
                </formfield>
            </field>
            <field name="path">
                <value>content/articles</value>
            </field>
            <field name="alias">
                <filter>function-name</filter>
                <grid>
                    <sortable>true</sortable>
                </grid>
                <formfield>
                    <type>text</type>
                    <name>title</name>
                    <id>title</id>
                    <length>30</length>
                </formfield>
            </field>
            <field name="content_text">
                <filter>function-name</filter>
                <formfield>
                    <id>title</id>
                    <name>title</name>
                    <type>textarea</type>
                    <name>title</name>
                    <id>title</id>
                    <length>30</length>
                </formfield>
            </field>
        </fieldset>
        <fieldset name="custom_fields">
        </fieldset>
        <fieldset name="parameters">
        </fieldset>
        <fieldset name="metadata">
        </fieldset>
    </fields>
</table>

