	<authorUrl>http://molajo.org</authorUrl>
	<version>1.0</version>
	<description>TEMPLATE_SAMPLE_DESCRIPTION</description>

	<files>
		<filename>index.php</filename>
		<filename>README.md</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>pages</folder>
	</files>

	<config>
		<fields name="parameters">
			<fieldset name="basic">
				<field
					name="choice"
					type="list"
					default="1"
					label="TEMPLATE_SAMPLE_FIELD_CHOICE_LABEL"
					description="TEMPLATE_SAMPLE_FIELD_CHOICE_DESC">
					<option value="0">DISABLED</option>
					<option	value="1">ENABLED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
