<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="1.6.0"
        application="site"
        method="upgrade">
    <name>breadcrumbs</name>
    <author>Molajo Project</author>
    <creationDate>July 2006</creationDate>
    <copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>molajo.org</authorUrl>
    <version>1.0</version>
    <description>BREADCRUMBS_DESCRIPTION</description>
    <files>
        <filename
                module="breadcrumbs">breadcrumbs.php
        </filename>
        <folder>views</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>breadcrumbs.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.breadcrumbs.ini</language>
        <language tag="en-GB">en-GB.breadcrumbs.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_BREADCRUMBS"/>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="showHere"
                        type="radio"
                        default="1"
                        label="BREADCRUMBS_FIELD_SHOWHERE_LABEL"
                        description="BREADCRUMBS_FIELD_SHOWHERE_DESC">
                    <option
                            value="0">JNO
                    </option>
                    <option
                            value="1">JYES
                    </option>
                </field>
                <field
                        name="showHome"
                        type="radio"
                        default="1"
                        label="BREADCRUMBS_FIELD_SHOWHOME_LABEL"
                        description="BREADCRUMBS_FIELD_SHOWHOME_DESC">
                    <option
                            value="0">JNO
                    </option>
                    <option
                            value="1">JYES
                    </option>
                </field>
                <field
                        name="homeText"
                        type="text"
                        default="Home"
                        label="BREADCRUMBS_FIELD_HOMETEXT_LABEL"
                        description="BREADCRUMBS_FIELD_HOMETEXT_DESC"/>
                <field
                        name="showLast"
                        type="radio"
                        default="1"
                        label="BREADCRUMBS_FIELD_SHOWLAST_LABEL"
                        description="BREADCRUMBS_FIELD_SHOWLAST_DESC">
                    <option
                            value="0">JNO
                    </option>
                    <option
                            value="1">JYES
                    </option>
                </field>
                <field
                        name="separator"
                        type="text"
                        label="BREADCRUMBS_FIELD_SEPARATOR_LABEL"
                        description="BREADCRUMBS_FIELD_SEPARATOR_DESC"/>
            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="view"
                        type="moduleview"
                        label="JFIELD_ALT_VIEW_LABEL"
                        description="JFIELD_ALT_MODULE_VIEW_DESC"/>
                <field
                        name="view_class_suffix"
                        type="text"
                        label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="MODULES_FIELD_CACHING_LABEL"
                        description="MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="MODULES_FIELD_CACHE_TIME_LABEL"
                        description="MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="">
                    <option
                            value=""></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
